<!doctype html>
<html lang="en">
  <head>
    <title>Suggesto - My Apps</title>
    <%- include('../../shared/includes/meta') %> <%-
    include('../../shared/includes/styles') %>
  </head>
  <body class="bg-background">
    <div class="flex min-h-screen flex-col items-center">
      <%- include('../../shared/partials/header') %>

      <main
        class="flex w-full max-w-6xl grow flex-col justify-stretch px-4 py-4 sm:py-8 lg:px-28">
        <div>
          <h3 class="text-gray-dark text-center text-3xl font-bold sm:text-6xl">
            MY APPLICATIONS
          </h3>
          <p class="text-center text-gray-600 sm:text-lg">
            Manage your feedback collection apps
          </p>
        </div>

        <div class="self-center sm:self-auto lg:px-16">
          <div class="relative">
            <div
              class="grid gap-6 py-6 sm:flex sm:snap-x sm:space-x-6 sm:overflow-x-auto">
              <% apps.forEach(app => { %>
              <div
                class="bg-primary bg-gray-dark h-96 w-80 shrink-0 snap-start rounded-xl p-6 text-white">
                <div class="flex h-full flex-col">
                  <div class="mb-4">
                    <div class="flex items-center space-x-3">
                      <div
                        class="flex h-10 w-10 items-center justify-center rounded-full bg-white">
                        <span class="text-lg font-medium text-black"
                          ><%= app.name.charAt(0) %></span
                        >
                      </div>
                      <h3 class="text-xl font-medium"><%= app.name %></h3>
                    </div>
                  </div>

                  <p class="mb-6 flex-grow text-sm"><%= app.description %></p>

                  <div class="flex justify-end space-x-3">
                    <a
                      href="/apps/<%= app._id %>/edit"
                      class="hover:bg-gray-light rounded-xl px-3 py-2 transition-colors">
                      Edit
                    </a>
                    <a
                      href="/apps/<%= app._id %>"
                      class="hover:bg-gray-light rounded-xl px-4 py-2 text-white transition-colors duration-300 ease-in-out">
                      Preview
                    </a>
                  </div>
                </div>
              </div>
              <% }) %>

              <a
                href="/apps/add-app"
                class="bg-primary flex w-80 shrink-0 items-center justify-center rounded-xl border-2 border-dashed border-gray-300 p-6 transition-colors duration-300 hover:border-gray-400">
                <div class="text-center">
                  <span class="mb-2 block text-3xl">+</span>
                  <span class="text-gray-600">Add New Application</span>
                </div>
              </a>
            </div>
          </div>
        </div>
      </main>
    </div>
    <%- include('../../shared/includes/scripts') %>
  </body>
</html>
